{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "../..",
    "paths": {
      "@vibed/core": ["../../packages/core/src/index.ts"],
      "@vibed/core/*": ["../../packages/core/src/*"],
      "@vibed/db": ["../../packages/db/src/index.ts"],
      "@vibed/db/*": ["../../packages/db/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
